{
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./src/js/modules",
    "strict": true,
    "noImplicitAny": true,
  },
}